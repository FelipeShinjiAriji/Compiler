%option noyywrap

%%

--[a-zA-Z]*             {printf("%s comment\n", yytext);}
\n                      {;}
\r                      {;}
[" ""   "]              {printf("white space\n");}
if                      {printf("IF");}
[0-9]+"."[0-9]*         {printf("%s REAL\n", yytext);}
[0-9]*"."[0-9]+         {printf("%s REAL\n", yytext);}
[0-9]+                  {printf("%s NUM\n", yytext);}
[a-zA-Z][a-zA-Z0-9]*    {printf("%s ID\n", yytext);}
.                       { printf("%s error\n", yytext) ;}

%%

int main (int argc , char ** argv)
{
    yylex();
    return 0;
}